<h2>Result</h2>
<% if @model == "user" %>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
	  <th></th>
	  <th>name</th>
	</tr>
  </thead>
    <% @records.each do |user| %>
	<tr>
	  <td>
	 	<%= link_to (user) do %>
		  <%= attachment_image_tag(user, :profile_image, size:"50x50", fallback: "no-image-mini.jpg") %>
		<% end %>
	  </td>
	  <td><%= user.name%></td>
      <td>follows:<%= user.relationships.count %></td>
	  <td>followers:<%= user.reverse_of_relationships.count %></td>
	  <td><%= render "relationships/follow_button", user: user %></td>
	  <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
	</tr>
    <% end %>
  </tbody>
</table>

<% else %>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
	  <th></th>
	  <th>Title</th>
	  <th>Opinion</th>
	  <th colspan="3"></th>
	</tr>
  </thead>

  <tbody>
	<% @records.each do |book| %>
	<tr>
	  <td>
	 	<%= link_to (book.user) do %>
		  <%= attachment_image_tag(book.user, :profile_image, size:"50x50", fallback: "no-image-mini.jpg") %>
		<% end %>
	  </td>
	  <td><%= book.title %></td>
	  <td><%= book.body %></td>
	</tr>
    <% end %>
  </tbody>
</table>
<% end %>