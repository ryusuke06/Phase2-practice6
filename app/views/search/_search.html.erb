<%= form_tag(search_path, method: :get) do %>
  <%= text_field_tag "search[content]" %>
  <%= select_tag "search[model]", options_for_select({"Users" => "user", "Books" => "book"}) %>
  <%= select_tag "search[method]", options_for_select({"完全一致" => "parfect", "部分一致" => "partial", "前方一致" => "front", "後方一致" => "back"}) %>
  <%= submit_tag "検索" %>
<% end %>